<% layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login On WanderLust</h1>
        <br><br><br>
        <div class="col-6 offset-3">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Enter Username" class="form-control" required id="username" type="text">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" placeholder="Enter Password" class="form-control" required id="password" type="password">
                </div>
                <br>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>